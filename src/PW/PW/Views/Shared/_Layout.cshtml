<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @RenderSection("css", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PW Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Transfers", "Index", "Transfer")</li>}
                    else
                    {
                        <li>@Html.ActionLink("Sign In", "Signin", "Account")</li>
                        <li>@Html.ActionLink("Sign Up", "Signup", "Account")</li>}
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-user" style="margin-right: 3px;"></span>@User.Identity.Name</a></li>
                        <li><a href='@Url.Action("Signout", "Account")'><span class="glyphicon glyphicon-log-out" style="margin-right: 3px;"></span>Sign Out</a></li>
                        
                    </ul>}

            </div>
        </div>
    </div>
    <div class="container body-content" ng-app="PW">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PW Application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
